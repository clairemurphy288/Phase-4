<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phase 4</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Customer Credit Check</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Rating</th>
                <th>Current Credit</th>
                <th>Credit Already Allocated</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(item => { %>
                <tr>
                    <td><%= item.customer_name %></td>
                    <td><%= item.rating %></td>
                    <td><%= item.current_credit %></td>
                    <td><%= item.credit_already_allocated %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

